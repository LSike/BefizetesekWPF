<Window x:Class="BefizetesekWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BefizetesekWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="lblNev" Content="Első címke" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbxOsszeg" HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" Text="Beírt szöveg" VerticalAlignment="Top" Width="120"/>
        <TextBlock Name="tbkBefizetesek" HorizontalAlignment="Left" Margin="200,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <ComboBox Name="cbxSorszam" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SorszamValasztva"/>
        <ComboBox Name="cbxNev" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbxNev_SelectionChanged"/>
    </Grid>
</Window>
